<section>
  <div class="container mt-6">
    <div class="row">
      {{#each products}}
      <div class="col-md-3 p-4">
        <div class="card product-card" style="width: 18rem; height: 32rem; border-radius: 20px; box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1); transition: transform 0.3s ease; padding-left: 20px; padding-right: 20px;">
          <img src="{{#if Image}}/product-images/{{Image}}{{else}}/product-images/{{_id}}.jpg{{/if}}" class="card-img-top" style="height: fit-content; border-radius: 12px 12px 0 0; object-fit: cover;" alt="{{Name}}" onerror="this.style.display='none';">
          <div class="card-body d-flex flex-column justify-content-between" style="padding: 1.5rem;">
            <div>
              <h5 class="card-title" style="font-family: 'Lora', serif; font-size: 1.5rem; font-weight: 700; color: #1a252f;">{{Name}}</h5>
              <p class="card-text" style="font-family: 'Poppins', sans-serif; color: #7f8c8d;">{{Description}}</p>
              <h6 class="card-title w-100 pt-2 text-center" style="font-family: 'Poppins', serif; font-size: 1.5rem; font-weight: 700; color: #1a252f;">Rs. {{Price}}</h6>
            </div>
            <button type="button" class="btn btn-primary w-100 mt-3" onclick="addToCart('{{_id}}')" style="border-radius: 12px; transition: all 0.3s ease;">Add to Cart</button>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

<style>
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, #2c6da6 0%, #3498db 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(52, 152, 219, 0.5);
  }

  .product-card {
    padding-left: 20px;
    padding-right: 20px;
  }
</style>