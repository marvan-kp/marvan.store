<section>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-6 d-grid gap-2 col-6 mx-auto">
        <h2 class="text-center">Add Review for {{product.Name}}</h2>
        {{#if error}}
        <div class="alert alert-danger" role="alert">
          {{error}}
        </div>
        {{/if}}
        <form action="/admin/add-review/{{product._id}}" method="post">
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" name="username" required>
          </div>
          <div class="mb-3">
            <label for="rating" class="form-label">Rating (1-5)</label>
            <input type="number" class="form-control" name="rating" min="1" max="5" required>
          </div>
          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea class="form-control" name="comment" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary d-grid gap-2 col-6 mx-auto">Submit Review</button>
        </form>
      </div>
    </div>
  </div>
</section>